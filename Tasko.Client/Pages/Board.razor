@page "/board/{BoardGuid}"
@using Tasko.Domains.Models.Structural.Providers;

<NavBar FullName="@BoardViewModel.UserInfo?.User.FirstName"
        Email="@BoardViewModel.UserInfo?.User.About"
        PagePartition="Панель управления"
        PageName="Информация" />

<BoardNavBar BoardName="@BoardViewModel.Board?.Name" />


@code {

    [Parameter]
    public string BoardGuid { get; set; }

    [Inject]
    protected IBoardViewModel BoardViewModel { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await BoardViewModel.GetProfileAsync();
        await BoardViewModel.GetBoardAsync(Guid.Parse(BoardGuid));

        await base.OnInitializedAsync();
    }

}